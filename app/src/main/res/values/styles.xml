<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.GoogleButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/googleg_standard_color_18</item>
        <item name="android:drawableStart">@drawable/googleg_standard_color_18</item>
        <item name="android:drawablePadding">@dimen/default_margin</item>
        <item name="android:text">@string/google_signin</item>
        <item name="android:textColor">@color/common_google_signin_btn_text_light</item>
    </style>

    <style name="AppTheme.FacebookButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/facebookMainColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/ic_fb</item>
        <item name="android:drawableStart">@drawable/ic_fb</item>
        <item name="android:drawablePadding">@dimen/default_margin</item>
        <item name="android:text">@string/facebook_signin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.VkButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/vkMainColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/ic_vk</item>
        <item name="android:drawableStart">@drawable/ic_vk</item>
        <item name="android:drawablePadding">@dimen/default_margin</item>
        <item name="android:text">@string/vk_signin</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
